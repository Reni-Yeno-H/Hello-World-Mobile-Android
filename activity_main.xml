<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Sky_blue"
    android:id="@+id/parentColor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello from Hao Ren!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="43sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="#cd66ff"
        android:textColor="#FFFFFFFF"
        android:text="Click to change text color"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:textSize="30sp" />

    <TextView
        android:layout_above="@id/button"
        android:id="@+id/changeBackgroundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#cd66ff"
        android:textColor="#FFFFFFFF"
        android:text="Click to change background color"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:textSize="24sp" />

    <TextView
        android:layout_above="@+id/changeBackgroundButton"
        android:id="@+id/changeTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#cd66ff"
        android:textColor="#FFFFFFFF"
        android:text="Click to change text"
        android:padding="5dp"
        android:textSize="30sp" />

    <EditText
        android:layout_above="@+id/changeTextButton"
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Create your own text" />

    <TextView
        android:layout_above="@+id/changeTextButton"
        android:id="@+id/changeCustomTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="#cd66ff"
        android:textColor="#FFFFFFFF"
        android:text="Click to change to custom text"
        android:padding="5dp"
        android:textSize="28sp" />
</RelativeLayout>